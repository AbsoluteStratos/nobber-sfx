---
interface Props {
	title: string;
}
const {title} = Astro.props;
---

<div id="title-container">
    <div id="title-text">
        {title}
    </div>
</div>

<style>
    #title-text{
        margin-bottom: 10px;
        width: 100%;
        text-align: center; 
        font-family: 'Comic Sans MS', cursive, sans-serif;
        color: salmon;
        font-weight: bold;
        font-size: 3rem;
        opacity: 0.9;

        font-size: clamp(2rem, 4vw, 4rem);

        paint-order: stroke fill;
        -webkit-text-stroke: 0.1em white; /* white border around text */
        text-stroke: 0.1em white;         /* fallback for future support */

        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none; 
    }
</style>